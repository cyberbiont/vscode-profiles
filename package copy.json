{
	"name": "vscode-profiles",
	"displayName": "Profiles",
	"description": "Quickly change your settings and extensions configuration",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.44.0",
		"node": "^10.16.0"
	},
	"categories": ["Other"],
	"keywords": ["profiles", "extensions", "settings", "configuration"],
	"activationEvents": ["*"],
	"main": "./out/extension.js",
	"contributes": {
		"configuration": [
			{
				"title": "Profiles",
				"properties": {
					"sidenotes.path": {
						"type": "string",
						"description": "Specifies the folder where profiles are stored"
					},
					"symlinkifyExtensions": {
						"type": "boolean",
						"description": "It true, all extensions are replaced with symlinks in profile folders"
					}
				}
			}
		],
		"commands": [
			{
				"command": "vscode-profiles.switch",
				"title": "Profiles: Switch"
			},
			{
				"command": "vscode-profiles.create",
				"title": "Profiles: Create"
			},
			{
				"command": "vscode-profiles.clone",
				"title": "Profiles: Clone"
			},
			{
				"command": "vscode-profiles.delete",
				"title": "Profiles: Delete"
			},
			{
				"command": "vscode-profiles.rename",
				"title": "Profiles: Rename"
			},
			{
				"command": "vscode-profiles.clean",
				"title": "Profiles: Clean"
			},
			{
				"command": "vscode-profiles.rescan",
				"title": "Profiles: Rescan"
			},
			{
				"command": "vscode-profiles.maintenance",
				"title": "Profiles: Maintenance"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc --build src && ts-cleaner -d out",
		"watch": "tsc --build src --watch && ts-cleaner -d out",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/node": "^14.0.1",
		"@types/vscode": "^1.45.1",
		"chai": "^4.2.0",
		"eslint-config-cyberbiont": "file:../../eslint-config-cyberbiont",
		"jest": "^26.0.1",
		"jest-html-reporters": "^1.2.1",
		"jest-stare": "^2.0.1",
		"omnimock": "^0.8.1",
		"ts-cleaner": "^1.0.5",
		"ts-jest": "^26.0.0",
		"ts-node": "^8.10.1",
		"typescript": "^3.9.2",
		"vscode-test": "^1.3.0",
		"@typescript-eslint/eslint-plugin": "^2.34.0",
		"@typescript-eslint/parser": "^2.34.0",
		"eslint": "^7.0.0",
		"eslint-config-airbnb": "^18.1.0",
		"eslint-config-airbnb-base": "^14.1.0",
		"eslint-config-prettier": "^6.11.0",
		"eslint-plugin-chai-expect": "^2.1.0",
		"eslint-plugin-chai-friendly": "^0.6.0",
		"eslint-plugin-import": "^2.20.2",
		"eslint-plugin-jest": "^23.13.1",
		"eslint-plugin-prettier": "^3.1.3",
		"prettier": "^2.0.5"
	},
	// ðŸ•® <cyberbiont> afdb156c-723a-4651-a578-8eb2b11bfe5c.md
	"extensionDependencies": [
		"shan.code-settings-sync",
		"hoovercj.vscode-settings-cycler"
	],
	"prettier": "eslint-config-cyberbiont/.prettierrc"
}
